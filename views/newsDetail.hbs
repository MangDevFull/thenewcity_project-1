<!-- breadcrumb-area-end -->
<!-- inner-blog -->
<section class="inner-blog b-details-p pt-120 pb-120">
    <div class="container">
        <div class="row">
            <div class="blog-details-wrap">
                <div class="details__content pb-30">
                    <h2>{{singleNews.title}}</h2>
                    <div class="meta-info">
                        <ul>
                            <li><i class="fal fa-calendar-alt"></i>{{singleNews.create_day}}</li>
                        </ul>
                    </div>
                    <div class="details__content-img">
                        <img src="./img/uploads/{{singleNews.image_content}}" alt="Ảnh content">
                    </div>
                    <textarea style="display:none" id="getContent">{{singleNews.content}}</textarea>
                    <div id="render">
                    </div>

                </div>
                <!-- #respond -->
            </div>

        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $("#render").html($("#getContent").text())
    })
</script>
<!-- Start right Content here -->
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="">
            <div class="page-header-title">
            </div>
        </div>
        <div class="page-content-wrapper ">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body user-card">
                                <div class="media-main">
                                    <a class="float-left" href="#">
                                        <img class="thumb-lg rounded-circle" src="/img/uploads/{{singleNews.thumb}}"
                                            alt="">
                                    </a>
                                    <div class="info pl-3">
                                        <h4 class="mt-3">Chủ đề: <b>{{singleNews.title}}</b> </h4>
                                        <p class="text-muted">Mô tả: </p> <b>{{singleNews.description}} </b>
                                    </div>
                                </div>
                                <hr>
                                <div class="clearfix">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <img src="/img/uploads/{{singleNews.image_content}}">
                                        </div>
                                    </div>
                                    <textarea style="display:none" id="get">{{singleNews.content}}</textarea>
                                    <div id="content">

                                    </div>
                                </div>
                                <div class="modal fade" id="ignismyModal" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label=""><span>×</span></button>
                                            </div>

                                            <div class="modal-body">
                                                <div class="thank-you-pop">
                                                    <img src="http://goactionstations.co.uk/wp-content/uploads/2017/03/Green-Round-Tick.png"
                                                        alt="">
                                                    <h1>Xóa thành công</h1>
                                                    <p>Bạn đang được chuyển hướng</p>
                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <p style="display: none;" id="getID">{{singleNews._id}}</p>
                            </div> <!-- card-body -->
                            <div class="container d-flex justify-content-center" style="margin-top: 30px; margin-bottom: 30px"> <button class="btn btn-danger btn-lg"
                                    data-toggle="modal" data-target="#my-modal"> <i class="fas fa-trash"></i> Xóa</button>
                                <div id="my-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content border-0">
                                            <div class="modal-body p-0">
                                                <div class="card border-0 p-sm-3 p-2 justify-content-center">
                                                    <div class="card-header pb-0 bg-white border-0 ">
                                                        <div class="row">
                                                            <div class="col ml-auto"><button type="button" class="close"
                                                                    data-dismiss="modal" aria-label="Close"> <span
                                                                        aria-hidden="true">&times;</span> </button>
                                                            </div>
                                                        </div>
                                                        <p class="font-weight-bold mb-2"> Bạn có chắc muốn xóa tin tức này không</p>
                                                        <p class="text-muted "> Tin tức sẽ bị xóa vĩnh viễn</p>
                                                    </div>
                                                    <div class="card-body px-sm-4 mb-2 pt-1 pb-0">
                                                        <div class="row justify-content-end no-gutters">
                                                            <div class="col-auto"><button type="button"
                                                                    class="btn btn-light text-muted"
                                                                    data-dismiss="modal">Hủy</button></div>
                                                            <div class="col-auto">
                                                                                            <a id="delete" style="text-align: center; margin-top:15px;margin-bottom: 15px;">
                                <button type="button" class="btn btn-lg waves-effect btn-danger">
                                
                                    Xóa</button>
                            </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- End Row -->
                </div>
            </div>
        </div>
    </div>
    <script>
        $("#content").html($("#get").text())
        $("#delete").click(function () {
            const id = $("#getID").text();
            console.log(id)
            $.ajax({
                url: "./deleteNews",
                method: "DELETE",
                data: { data: id },
                success: function (data) {
                    if (data.boolean) {
                         $("#my-modal").modal('hide');
                        $('#ignismyModal').modal('show');
                        setTimeout(function () {
                            window.location.replace("./news");
                        }, 1500)
                    }
                },
                error: function () {
                    alert("error");
                }
            })
        })
    </script>